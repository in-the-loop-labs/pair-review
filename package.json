{
  "name": "pair-review",
  "version": "1.0.0",
  "description": "AI-powered GitHub pull request review assistant",
  "main": "src/server.js",
  "bin": {
    "pair-review": "./bin/pair-review.js",
    "git-diff-lines": "./bin/git-diff-lines"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "node bin/pair-review.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "keywords": [
    "github",
    "pull-request",
    "code-review",
    "ai",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^19.0.11",
    "express": "^4.18.2",
    "markdown-it": "^13.0.2",
    "open": "^9.1.0",
    "simple-git": "^3.19.1",
    "sqlite3": "^5.1.6",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.16",
    "supertest": "^7.1.4",
    "vitest": "^4.0.16"
  }
}
